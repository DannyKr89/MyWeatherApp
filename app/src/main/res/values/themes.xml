<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyWeatherApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/normal_cyan</item>
        <item name="colorPrimaryVariant">@color/dark_cyan</item>
        <item name="colorOnPrimary">@color/light_cyan</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/normal_cyan</item>
        <item name="colorSecondaryVariant">@color/dark_cyan</item>
        <item name="colorOnSecondary">@color/light_cyan</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>
</resources>